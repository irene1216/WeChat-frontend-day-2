/* pages/show/show.wxss */
page {
  margin: 500rpx 60rpx;
  width: 80vw;
  font-size: large;
  font-weight: 100;
  height: 100vh;
  padding: 100rpx 50rpx 60rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0.8) 100%), url('https://image.freepik.com/free-vector/young-angry-man-mad-expression-vector-illustration_76775-255.jpg') no-repeat center;
  background-size: cover;
  /* background-position-x: -50vw; */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;  
}

.content {
  font-size: xx-large;
  text-align: center;
  margin: 50rpx 0;
}

.author {
  margin: 50rpx 0;
}

button {
  margin: 20rpx;
  font-weight: 100 !important;
}

button:first-of-type {
  margin-top: 200rpx;
}

